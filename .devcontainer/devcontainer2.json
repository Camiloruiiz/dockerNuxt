// https://github.com/microsoft/vscode-dev-containers/tree/v0.205.1/containers/docker-existing-dockerfile
{
  "name": "Remote Pi workspace",

  // Sets the run context to one level up instead of the .devcontainer folder.
  "context": "..",

  // Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
  "dockerFile": "../docker/web/Dockerfile",

  // Set *default* container specific settings.json values on container create.
  "settings": {},

  "workspaceFolder": "/workspace",
  "workspaceMount": "source=/home/maximiix/dev,target=/workspace,type=bind,consistency=cached",

  // Uncomment to use the Docker CLI from inside the container. See https://aka.ms/vscode-remote/samples/docker-from-docker.
  // Implementing DIND (Docker in Docker)
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  //"appPort": [5000], // only exposed locally on the machine with 127.0.0.1
  "runArgs": ["--privileged", "-P"],
  // Set to "none" if you want to keep your containers running after VS Code shuts down.
  // Set to "stopCompose" to close containers running after VS Code shuts down.
  "shutdownAction": "none",

  // Uncomment the next line to run commands after the container is created - for example installing curl.
  // "postCreateCommand": "npm i && npm run dev"
  "postCreateCommand": "npm install && npm run dev"
